# docker run -d -p 80:80 --name share -v ./storage:/usr/share/nginx/html -v ./nginx.conf:/etc/nginx/nginx.conf nginx:stable

events {
    worker_connections 1024;
}

http {
    server {
        listen 80;
        server_name example.com; # Change to your domain name or IP address

        root /usr/share/nginx/html;
        index index.html index.htm;

        location / {
            autoindex on; # Enable directory listing
        }

        # Optional: Customize the appearance of the directory listing
        # location ~ /\.ht {
        #     deny all;
        # }
    }
}
